<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.includecar.includecar.fragments.ambulancestatus.AmbulanceStatusFragment">

    <Switch
        android:id="@+id/toggle_ambulance_search_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enableDisableSearchingToggle"
        android:textOff="@string/notWaitingStatusAmbulance"
        android:textOn="@string/waitingStatusAmbulance"
        android:typeface="sans"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/request_status_ambulance"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notWaitingStatusAmbulance"
        android:textAlignment="center"
        android:textSize="36sp"
        android:typeface="sans" />
    <TextView
        android:id="@+id/request_status_ambulance2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notWaitingStatusAmbulance"
        android:textAlignment="center"
        android:textSize="36sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/END_ACCIDENT_BUTTON"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Accident Handled"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</LinearLayout>
